# it isnt the most optimized function but come, on. they should give me a prize for this! :)
function get_wifi_access_points {

	available_access_points=`$airport -I | grep -v "Off"`
	if [ -n "$available_access_points" ]; then

		$airport -s -x | egrep 'BSSID|CHANNEL<|NOISE|SSID_STR|RSSI' --after-context=1 \
		| egrep -v "AGE|array|WPA" | tr '\n' ' ' \
		| sed -e 's/key//g' -e 's/integer//g' -e 's/string//g' -e 's/[<|>|\/]//g' -e 'y/:/-/' -e 's/ -- /, /g' \
		-e 's/BSSID...\([a-f0-9-]*\)/{"mac_address": "\1"/g' \
		-e 's/CHANNEL...\([0-9]*\)/"channel": \1/g' \
		-e 's/NOISE...\([0-9]*\)/"signal_to_noise": \1/g' \
		-e 's/RSSI...\([0-9]*\)/"signal_strength": \1/g' \
		-e 's/SSID_STR...\([a-z,A-Z,0-9,_.-]*\)/"ssid": "\1"}/g'

	fi

}
