# we dont have a /tmp folder over here!
screenshot="c:\windows\temp\prey-screenshot.bmp"

function get_mac_address {
	mac_address=`ipconfig -all | grep Physical | sed 's/^.*: //g' | grep -v '^$' | head -1`
}

function get_uptime_and_programs {
	uptime=`net stats srv | grep Statistics`
	running_programs=`tasklist -v`
}

function get_screenshot {
	$module_path/lib/boxcutter-fs.exe $screenshot
}
