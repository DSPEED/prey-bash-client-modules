get_uptime_and_programs() {
	uptime=`uptime`
	running_programs=`ps aux | grep -v root`
}

get_modified_files() {
	# we need to translate ~ to the user path
	local modified_files_path=`eval echo $modified_files_path`
	# we dont include hidden files
	modified_files=`find $modified_files_path \( ! -regex '.*/\..*/..*' \) -type f -mmin -$modified_files_time 2> /dev/null`
}

compress_screenshot() {
	echo " -- Compressing screenshot..."
	tar zcf $screenshot.tar.gz $screenshot
	screenshot=$screenshot.tar.gz
}

get_reboot_history() {
	reboot_history=`last reboot`
}

get_battery_information() {
	battery_info=`grep -F capacity: /proc/acpi/battery/BAT0/info 2> /dev/null`
}
