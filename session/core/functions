get_uptime_and_programs() {
	uptime=`uptime`
	running_programs=`ps aux | grep -v root`
}

get_modified_files() {
	# we need to translate ~ to the user path
	local real_path=`eval echo $session__modified_files_path`
	# we dont include hidden files
	modified_files=`find $real_path \( ! -regex '.*/\..*/..*' \) -type f -mmin -$session__modified_files_time 2> /dev/null`
}

compress_screenshot() {
	echo " -- Compressing screenshot..."
	tar zcf $session__screenshot.tar.gz $session__screenshot
	session__screenshot=$screenshot.tar.gz
}
